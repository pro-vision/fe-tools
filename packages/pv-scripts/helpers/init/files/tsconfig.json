{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "allowJs": false,
    "baseUrl": "./",
    "paths": {
      "Config/*": ["src/js/config/*"],
      "Core/*": ["src/js/core/*"],
      "Constants/*": ["src/js/constants/*"],
      "Abstracts/*": ["src/components/abstract/*"],
      "Components/*": ["src/components/*"],
      "Icons/*": ["resources/icons/*"],
      "Helper/*": ["src/js/helper/*"],
      "Services/*": ["src/js/services/*"],
      "Interfaces/*": ["src/js/interfaces/*"]
    }
  }
}